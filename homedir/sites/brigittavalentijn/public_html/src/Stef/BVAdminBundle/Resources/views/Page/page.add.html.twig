{% extends 'StefBVAdminBundle::form.html.twig' %}
{% set pagetitle = 'Pagina toevoegen' %}

{% block form %}

    <form action="{{ path('stef_bvadminbundle_add_page') }}" method="post" {{ form_enctype(form) }} class="blogger">
        {{ form_errors(form) }}

        {{ form_row(form.title) }}
        {{ form_row(form.slug) }}
        {{ form_row(form.bodytext) }}

        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    </form>
{% endblock %}