{% extends 'StefBVBundle::layout.html.twig' %}

{% block title %}{{ blog.title }}{% endblock %}

{% block body %}
    <article class="blog">
        <header>
            <div class="date"><time datetime="{{ blog.created|date('c') }}">{{ blog.created|date('l, F j, Y') }}</time></div>
            <h2>{{ blog.title }}</h2>
        </header>

        <div>
            <p>{{ blog.created|date }}</p>
            <p>{{ blog.blog }}</p>
        </div>
    </article>
{% endblock %}