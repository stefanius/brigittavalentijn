{% extends 'StefBVBundle::layout.html.twig' %}

{% block body %}

    <div id="main-wrapper">
        <div id="main" class="container">

            <section class="box features bvpage">
                <h1>{{ page.title }}</h1>
                {{ page.body|raw }}

                {% if pageOptions.youtube is defined %}
                    <div style="height: 350px; width: 400px;">
                        {% include 'StefSimpleCmsBundle:Elements:youtube.html.twig' with pageOptions %}
                    </div>

                {% endif %}
            </section>


        </div>
    </div>

{% endblock %}